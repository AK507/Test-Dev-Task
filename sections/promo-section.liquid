<!-- Summer Sale -->
<div class="relative overflow-hidden bg-white">
  <div class="pb-80 pt-16 sm:pb-40 sm:pt-24 lg:pb-48 lg:pt-40">
    <div class="relative mx-auto max-w-7xl px-4 sm:static sm:px-6 lg:px-8">
      <div class="sm:max-w-lg">
        <h1 class="font text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">{{ section.settings.title }}</h1>
        <p class="mt-4 text-xl text-gray-500">{{ section.settings.desc }}</p>
      </div>
      <div>
        <div class="mt-10">
          <!-- Decorative image grid -->
          <div aria-hidden="true" class="pointer-events-none lg:absolute lg:inset-y-0 lg:mx-auto lg:w-full lg:max-w-7xl">
            <div class="absolute transform sm:left-1/2 sm:top-0 sm:translate-x-8 lg:left-1/2 lg:top-1/2 lg:-translate-y-1/2 lg:translate-x-8">
              <div class="flex items-center space-x-6 lg:space-x-8">
                {% for block in section.blocks %}
                <div class="grid flex-shrink-0 grid-cols-1 gap-y-6 lg:gap-y-8">
                  {% for i in (1..3) %}
                  {% assign img = "img" | append: i %}
                  <div class="h-64 w-44 overflow-hidden rounded-lg sm:opacity-0 lg:opacity-100">
                    <img src="{{ block.settings[img] | img_url: 'master' }}" alt="" class="h-full w-full object-cover object-center">
                  </div>
                  {% endfor %}
                  
                </div>
                {% endfor %}
              </div>
            </div>
          </div>
          <a href="{{ section.settings.url }}" class="inline-block rounded-md border border-transparent bg-indigo-600 px-8 py-3 text-center font-medium text-white hover:bg-indigo-700">{{ section.settings.label }}</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End Summer Sale-->

{% schema %}
  {
    "name": "Promotional Section",
    "class": "promo-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Summer styles are finally here"
      },
      {
        "type": "richtext",
        "id": "desc",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "label",
        "label": "CTA Label"
      },
      {
        "type": "url",
        "id": "url",
        "label": "CTA URL"
      }
    ],
    "blocks": [
      {
        "type": "images",
        "name": "Images",
        "settings": [
          {
            "type": "image_picker",
            "id": "img1",
            "label": "Image 1"
          },
          {
            "type": "image_picker",
            "id": "img2",
            "label": "Image 2"
          },
          {
            "type": "image_picker",
            "id": "img3",
            "label": "Image 3"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Promotional Section"
      }
    ]
  }
{% endschema %}
