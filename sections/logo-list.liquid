<!-- Company Logos -->

<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <h2 class="text-center text-lg font-semibold leading-8 text-gray-900">{{ section.settings.title }}</h2>
    <div class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5">
      {% for block in section.blocks %}
      <img class="col-span-2 max-h-12 w-full object-contain lg:col-span-1" src="{{ block.settings.image | img_url: 'master' }}" alt="Transistor" width="158" height="48">
      {% endfor %}
    </div>
  </div>
</div>

<!-- End Company Logos-->

{% schema %}
  {
    "name": "Logo List",
    "class": "logo-list-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Trusted by the worldâ€™s most innovative teams"
      }
    ],
    "blocks": [
      {
        "type": "logo",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Logo"
          },
          {
            "type": "url",
            "id": "url",
            "label": "URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo List"
      }
    ]
  }
{% endschema %}