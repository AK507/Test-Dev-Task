<div class="container mx-auto py-8">
  <div class="grid grid-cols-4 gap-4">
    <div class="col-span-1">
      <div class="bg-gray-200 p-4 rounded-lg">
        <h2 class="text-xl font-bold mb-4">Filters</h2>
        <ul class="space-y-2">
          {% for tag in collection.all_tags %}
            <li class="flex items-center">
              <input type="checkbox" id="{{ tag | handle }}" class="mr-2">
              <label for="{{ tag | handle }}">{{ tag }}</label>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="col-span-3">
      <div class="grid grid-cols-3 gap-4">
        {% for product in collection.products %}
          <div class="bg-white p-4 rounded-lg shadow">
            <h2 class="text-lg font-bold mb-2">{{ product.title }}</h2>
            <p class="text-gray-600 mb-4">{{ product.description }}</p>
            <p class="text-lg font-bold text-green-500">${{ product.price }}</p>
            <a href="{{ product.url }}" class="bg-blue-500 hover:bg-blue-600 text-white rounded-lg px-4 py-2 inline-block mt-4">View Product</a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  // JavaScript code for handling sidebar filters
  document.addEventListener('DOMContentLoaded', function () {
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    checkboxes.forEach(function (checkbox) {
      checkbox.addEventListener('change', function () {
        const selectedTags = Array.from(checkboxes)
          .filter(function (checkbox) {
            return checkbox.checked;
          })
          .map(function (checkbox) {
            return checkbox.id;
          });
        
        // Update the collection URL with selected tags
        const collectionUrl = '{{ collection.url }}';
        const tagsQuery = selectedTags.length > 0 ? '?tags=' + selectedTags.join('+') : '';
        const filteredUrl = collectionUrl + tagsQuery;
        
        // Redirect to the filtered collection page
        window.location.href = filteredUrl;
      });
    });
  });
</script>

