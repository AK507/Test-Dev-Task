{% assign gridColumns = 'grid-cols-3' %}
<div class="flex">
  <div id="sidebar-filter" class="p-4">
    <!-- Sidebar filter code here -->
    {% include 'collection-sidebar' %}
  </div>
  <div class="flex-grow">
    <div class="grid {{ gridColumns }} gap-4">
      {% for product in collection.products %}
        <div class="relative bg-white shadow-lg rounded-lg overflow-hidden">
          <a href="{{ product.url }}" class="block">
            <div class="aspect-w-1 aspect-h-1">
              <img src="{{ product.featured_image | img_url: 'medium' }}" 
                  alt="{{ product.title }}" 
                  class="object-cover primary-image">
              <img src="{{ product.images[1] | img_url: 'medium' }}" 
                  alt="{{ product.title }}" 
                  class="absolute top-0 left-0 object-cover secondary-image opacity-0 transition-opacity duration-300">
            </div>
          </a>
          <div class="p-4">
            <a href="{{ product.url }}" class="block text-lg font-semibold text-gray-800 hover:text-gray-600">{{ product.title }}</a>
            <p class="mt-2 text-gray-600">{{ product.price | money }}</p>
            {% if product.compare_at_price > product.price %}
              <p class="mt-1 text-sm text-gray-500 line-through">{{ product.compare_at_price | money }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>

  .aspect-w-1 > img,
  .aspect-h-1 > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .aspect-w-1:hover .primary-image {
    opacity: 0;
  }

  .aspect-w-1:hover .secondary-image {
    opacity: 1;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const lazyImages = [].slice.call(document.querySelectorAll('.lazy'));

    if ('IntersectionObserver' in window) {
      const lazyImageObserver = new IntersectionObserver(function(entries, observer) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting) {
            const lazyImage = entry.target;
            lazyImage.src = lazyImage.dataset.src;
            lazyImage.srcset = lazyImage.dataset.srcset;
            lazyImage.classList.remove('lazy');
            lazyImageObserver.unobserve(lazyImage);
          }
        });
      });

      lazyImages.forEach(function(lazyImage) {
        lazyImageObserver.observe(lazyImage);
      });
    }
  });
</script>

